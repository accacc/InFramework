@page
@model IF.System.UI.SmsOneToMany.Pages.SmsListModel
@using IF.Web.Mvc.FluentHtml.Extension


@*@{
    Layout = "_ModalLayout";
}*@

@{
    ViewData["Title"] = "Sms List";
}





<form method="post" asp-action="View">
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-xs-6">

            Başlangıç Tarihi: <input type="text" class="form-control" id="BeginDate" name="BeginDate" value="@Model.BeginDate.ToShortDateString()">
        </div>
        <div class="col-xs-6">
            Bitiş Tarihi: <input type="text" class="form-control" id="EndDate" name="EndDate" value="@Model.EndDate.ToShortDateString()">
        </div>
       
    </div>

    <div class="row">
        <div class="col-xs-6">
            State: @Html.DropDownList("State", Html.GetEnumSelectList<IF.Core.Sms.BatchItemState>(), "All", new { @class = "form-control" })
            @*@Html.GetEnumSelectList(typeof(IF.Core.Sms.SmsState))">*@
        </div>
        <div class="col-xs-6">
            Number: <input type="text" class="form-control" id="Number" name="Number" value="@Model.Number">
        </div>
    </div>



    <br />
    <div class="row">
        <div class="col-xs-6">

        </div>
        <div class="col-xs-6">
            <input class="btn btn-default" type="submit" value="Search" />
        </div>
    </div>


    <br />

    @*<partial name="_ApplicationLogTable" model="Model" />*@
    @{await Html.RenderPartialAsync("_SmsTable", Model);}
</form>



