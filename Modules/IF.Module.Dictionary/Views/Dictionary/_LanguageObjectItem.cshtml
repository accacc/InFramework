
@using  IF.Web.Mvc.Extensions

@model IF.Persistence.EF.Localization.LanguageViewModel





@if (Model != null)
{
    @Html.Hidden("Languages[" + Model.Index + "].LanguageId", Model.LanguageId)
    @Html.Hidden("Languages[" + Model.Index + "].Id", Model.Id)

    @for (int i = 0; i < Model.Items.Count; i++)
    {

        <div class="row">
            <div class="col-md-4">

                <div class="form-group">
                    @Html.Label(Model.Items[i].Label)
                    @Html.TextBox("Languages[" + Model.Index + "].Items[" + i + "].Value", Model.Items[i].Value, new { @class = "form-control" })
                    @Html.Hidden("Languages[" + Model.Index + "].Items[" + i + "].Label", Model.Items[i].Label)


                </div>
            </div>
        </div>
    }



}

